
ADD in ~/.bashrc:
	source /opt/phpbrew/bashrc
	export PHPBREW_SET_PROMPT=1
	export EDITOR=vim
	export PHPBREW_ROOT=/opt/phpbrew
	export PHPBREW_HOME=/opt/phpbrew

